<% if (post.link){ %>
	<span itemprop="mainEntityOfPage">
		<h1 itemprop="name headline" class="blog-post-title">
<a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title || 'Untitled' %></a>
</h1>
</span>
<% } else { %><% if (index){ %>
								<span itemprop="mainEntityOfPage">
									<h1 itemprop="name headline" class="blog-post-title">
										<a class="<%= class_name %>" href="<%- url_for(post.path) %>">
											<%= post.title || '(no title)' %>
										</a>
									</h1>
								</span>
								<% } else { %>
						<span itemprop="mainEntityOfPage">
							<h1 class="<%= class_name %> blog-post-title" itemprop="name headline">
								<%= post.title || '(no title)' %>
							</h1>
						</span>
						<% } %><% } %>